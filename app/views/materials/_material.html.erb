<%= turbo_frame_tag dom_id(material) do %>
  <div class="p-20 max-needed-width inline-block common-shadow" border="1 solid color-border rad-4">
    <div class="flex gap-90">
      <div>
        <div class="flex mb-28 gap-20 align-i-center">
          <h3 class="m-0 inline-block"><%= material.name %></h3>
          <div class="<%= material.stock.status == "Good" ? "bg-color-good-status-bg" : "bg-color-bad-status-bg" %>
                      border-rad-4 color-white p-2-10 align-s-end" font="s-0.85rem">
                <%= material.stock.status %>
          </div>
        </div>
        <div class="flex gap-60 w-100p align-i-center">
          <div>
            <label class="color-secondary-text" font="s-0.9rem">current stock</label>
            <div><%= material.stock.current %> <%= material.unit %> </div>
          </div>
          <div>
            <label class="color-secondary-text" font="s-0.9rem">Minimum Stock Level</label>
            <div><%= material.stock.minimum %> <%= material.unit %> </div>
          </div>
          <div>
            <label class="color-secondary-text" font="s-0.9rem">Total Value</label>
            <div>â‚¹ <%= material.stock.value %></div>
          </div>
        </div>
      </div>
      <div>
        <div class="flex gap-10">
          <%= button_to 'Edit', edit_material_path(material), method: :get,
                        class: "bg-color-foreground color-white p-6-12 \
                                border-color-foreground font-size-1rem pointer",
                        border: "1 solid" %>
          <%= button_to 'Delete', material_path(material), method: :delete,
                        data: { turbo_confirm: 'Are you sure?' },
                        class: "bg-color-white color-foreground p-6-12 \
                                border-color-foreground font-s-1rem pointer",
                        border: "1 solid" %>
        </div>
      </div>
    </div>
  </div>
<% end %>
